<swiper
  class="{{className}}"
  style="{{style}}"
  autoplay="{{autoplay}}"
  indicator-dots="{{pagination}}"
  current="{{current}}"
  interval="{{interval}}"
  circular="{{loop}}"
  indicator-color="{{paginationStyle.itemColor}}"
  indicator-active-color="{{paginationStyle.itemActiveColor}}"
  vertical="{{direction === 'vertical'}}"
  onChange="onChange"
  duration="{{duration}}"
>
  <slot />
</swiper>
